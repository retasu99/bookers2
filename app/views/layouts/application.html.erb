<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/e3698def12.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<%#=--------------------------------------------------------------------------------------#%>

    <div class="header row bg-dark px-3 py-3">
      <div class="col-2">
        <%= link_to("Bookers", root_path, class: 'text-light')%>
      </div>
      <div class="col-6 offset-4">
        <% if user_signed_in? %>
          <div class="row">

          <div class="col-3">
            <%= link_to user_path(current_user.id), class: 'text-light' do %>
              <span><i class="fa-solid fa-house"></i> Home</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to users_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-users"></i> Users</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to books_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-book-open"></i> Books</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to destroy_user_session_path, method: :delete, class: 'text-light' do %>
              <span><i class="fa-solid fa-right-from-bracket"></i> Log out</span>
            <% end %>
          </div>

          </div>
        <% else %>
          <div class="row">

          <div class="col-3">
            <%= link_to root_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-house"></i> Home</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to about_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-link"></i> About</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to new_user_registration_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-user-plus"></i> Sign up</span>
            <% end %>
          </div>

          <div class="col-3">
            <%= link_to new_user_session_path, class: 'text-light' do %>
              <span><i class="fa-solid fa-right-to-bracket"></i> Log in</span>
            <% end %>
          </div>

          </div>      
        <% end %>
      </div>
    </div>

<%#=--------------------------------------------------------------------------------------#%>

    <div>
      <%= flash[:notice] %>
    </div>

    <%= yield %>
    
    <footer class="pt-5 pb-4">
      <div class="text-center">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>

  </body>
</html>
