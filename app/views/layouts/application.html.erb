<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/e3698def12.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<%#=--------------------------------------------------------------------------------------#%>

    <div class="header row bg-dark px-3 py-3">
      <div class="col-2">
        <%= link_to("Bookers", root_path, class: 'text-light')%>
      </div>
      <div class="col-6 offset-4">
        <% if user_signed_in? %>
          <div class="row">
          <div class="col-3">
            <%= link_to("Home", user_path(current_user.id),class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("Users", users_path, class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("Books", books_path, class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("Log out", destroy_user_session_path, method: :delete, class: 'text-light')%>
          </div>
          </div>
        <% else %>
          <div class="row">
          <div class="col-3">
            <%= link_to("Home", root_path, class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("About", about_path, class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("Sign up", new_user_registration_path, class: 'text-light')%>
          </div>
          <div class="col-3">
            <%= link_to("Log in", new_user_session_path, class: 'text-light')%>
          </div>
          </div>      
        <% end %>
      </div>
    </div>

<%#=--------------------------------------------------------------------------------------#%>

    <div>
      <%= flash[:notice] %>
    </div>

    <%= yield %>
    
    <footer class="pt-5 pb-4">
      <div class="text-center">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>

  </body>
</html>
