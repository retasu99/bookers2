<h1>User info</h1>
<div>
  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table><br>


  <% if user == current_user %>
    <%= link_to edit_user_path(current_user.id), class: 'text-secondary' do %>
      <div class="w-100 my-3 py-1 border border-secondary rounded text-center">
      <span><i class="fa-solid fa-user-gear"></i></span>
      </div>
    <% end %>
  <% else %>
    <%= link_to edit_user_path(user.id), class: 'text-secondary' do %>
      <div class="w-100 my-3 py-1 border border-secondary rounded text-center">
      <span><i class="fa-solid fa-user-gear"></i></span>
      </div>
    <% end %>
  <% end %>
</div>



<h1>New book</h1>
<%= form_with model: book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, size: "30", class:"border" %>

  <h4>Opinion</h4>
  <%= f.text_area :body, size: "35", class:"border" %>

  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>