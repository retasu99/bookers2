<div class="edit-user offset-4 px-5">

  <br>
  <h1>Users info</h1>

  <% if @user.errors.any? %>
    <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>



  <%= form_with model: @user do |f| %>

    <label for="inputName">Name</label><br>
    <%= f.text_field :name, size: "50", autofocus: true, id:"inputName"%><br><br>

    <label for="inputImage">ProfileImage</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*"%><br><br>

    <label for="inputIntroduction">Introduction</label><br>
    <%= f.text_area :introduction, size: "60" %><br><br>

    <%= f.submit "Update User", class: 'btn btn-secondary' %>
  
  <% end %>

</div>