<div class="container mt-3">
  <div class="row">

    <div class="col-md-3">
      <%= render partial: 'layouts/leftside', locals: { user: current_user, book: @book } %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">image</th>
          <th scope="col">name</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody class="table-user-index">
        <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.get_profile_image(100,100) %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    </div>

  </div>
</div>