<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render partial: 'layouts/leftside', locals: { user: current_user, book: @book } %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <% @users.each do |user| %>
      <div>
        <p>image:<%= image_tag user.get_profile_image(100,100) %></p>
        <p>name:<%= user.name %></p>
        <%= link_to "Show", user_path(user.id) %>
      </div>
    <% end %>
    </div>

  </div>
</div>