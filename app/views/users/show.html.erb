<h1>User info</h1>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>

  <% if @user == current_user %>
    <%= link_to "編集", edit_user_path(current_user.id) %>
  <% else %>
    <%= link_to "編集", user_path(current_user.id) %>
  <% end %>
</div>



<h1>New booK</h1>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>



<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>

    <%= link_to "#{book.title}", book_path(book.id) %>

    <p>Opinion:<%= book.body %></p>
  </div>
<% end %>
