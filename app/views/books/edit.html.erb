<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %><br>

  <label for="inputBody">Opinion</label>
  <%= f.text_area :body %><br>

  <%= f.submit "Update Book" %>

<% end %>

<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>