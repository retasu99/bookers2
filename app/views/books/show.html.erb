<h1>user info</h1>
<div>
  <h3><%= @book_show.user.name %></h3>
  <%= image_tag @book_show.user.get_profile_image(100,100) %>
  <p>name:<%= @book_show.user.name %></p>
  <p>introduction:<%= @book_show.user.introduction %></p>

  <%= link_to "編集", edit_user_path(@book_show.user.id) %>
</div>



<h1>New book</h1>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>



<h1>Book detail</h1>

<%= image_tag @book_show.user.get_profile_image(100,100) %>
<p>投稿者:<%= @book_show.user.name %></p>

<p>Title:<%= @book_show.title %></p>
<p>Introduction:<%= @book_show.body %></p>

<% if @book_show.user == current_user %>
  <%= link_to "編集", edit_book_path(@book_show.id) %>
<% end %>

<% if @book_show.user == current_user %>
  <%= link_to "削除", book_path(@book_show.id), method: :delete %>
<% end %>

