<div class="container mt-3">
  <div class="row">

    <div class="col-md-3">
      <%= render partial: 'layouts/leftside', locals: { user: @book_show.user, book: @book } %>
    </div>



    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>

      <table class="table">
        <tbody class="table-book-show">
        <tr>
          <th>
            <%= link_to user_path(@book_show.user.id) do %>
            <%= image_tag @book_show.user.get_profile_image(100,100) %><br>
            <%= @book_show.user.name %>
            <% end %>
          </th>

          <th><%= link_to "#{@book_show.title}", book_path(@book_show.id) %></th>
          <th><%= @book_show.body %></th>

          <% if @book_show.user == current_user %>
            <th><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-success" %></th>
            <th><%= link_to "Destroy", book_path(@book_show.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></th>
          <% end %>

        </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

